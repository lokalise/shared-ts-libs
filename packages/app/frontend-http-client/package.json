{
    "name": "@lokalise/frontend-http-client",
    "version": "6.0.0",
    "description": "Opinionated HTTP client for the frontend",
    "files": ["dist/**", "LICENSE", "README.md"],
    "main": "./dist/index.js",
    "type": "module",
    "exports": {
        ".": "./dist/index.js",
        "./package.json": "./package.json"
    },
    "author": {
        "name": "Lokalise",
        "url": "https://lokalise.com/"
    },
    "homepage": "https://github.com/lokalise/shared-ts-libs",
    "repository": {
        "type": "git",
        "url": "git://github.com/lokalise/shared-ts-libs.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf dist && tsc --project tsconfig.build.json",
        "clean": "rimraf dist",
        "lint": "biome check . && tsc",
        "lint:fix": "biome check --write",
        "test": "vitest run",
        "test:ci": "vitest run --coverage",
        "package-version": "echo $npm_package_version",
        "prepublishOnly": "npm run clean && npm run build",
        "postversion": "biome check --write package.json"
    },
    "dependencies": {
        "fast-querystring": "^1.1.2"
    },
    "peerDependencies": {
        "@lokalise/api-contracts": ">=5.0.0",
        "wretch": "^2.8.0",
        "zod": ">=3.25.56"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@lokalise/api-contracts": "^5.0.0",
        "@lokalise/biome-config": "^2.0.0",
        "@lokalise/tsconfig": "~1.3.0",
        "@types/node": "^24.0.3",
        "@vitest/coverage-v8": "^3.2.2",
        "jest-fail-on-console": "^3.3.1",
        "mock-xmlhttprequest": "^8.4.1",
        "mockttp": "^4.0.1",
        "rimraf": "^6.0.1",
        "typescript": "~5.8.3",
        "vitest": "^3.2.2"
    },
    "keywords": ["frontend", "web", "browser", "http", "client", "zod", "validation", "typesafe"]
}
