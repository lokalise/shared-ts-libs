{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"init": {
			"outputLogs": "errors-only"
		},
		"build": {
			"inputs": ["src/**", "tsconfig.json"],
			"outputs": ["dist/**"],
			"dependsOn": ["build-deps"]
		},
		"_test-base": {
			"inputs": ["src/**", "test/**/*", "!test/e2e/**/*", "tsconfig.json"],
			"dependsOn": ["build"]
		},
		"test": {
			"dependsOn": ["_test-base"]
		},
		"test:ci": {
			"dependsOn": ["_test-base"],
			"outputs": ["coverage/**"]
		},
		"test:e2e": {
			"inputs": [
				"test/e2e/**/*",
				"!test/e2e/{playwright-report,test-results}/**/*",
				"tsconfig.json"
			],
			"dependsOn": ["build"]
		},
		"_lint-base": {
			"inputs": [
				"src/**/*",
				"docs/**/*",
				"test/**/*",
				"!test/e2e/{playwright-report,test-results}/**/*",
				".eslintignore",
				".eslintrc.json",
				".prettierignore",
				"README.md",
				"tsconfig.json",
				"tsconfig.lint.json",
				"vitest.config.ts"
			],
			"dependsOn": ["init", "build-deps"]
		},
		"lint": {
			"dependsOn": ["_lint-base"]
		},
		"lint:fix": {
			"dependsOn": ["_lint-base"]
		}
	}
}
