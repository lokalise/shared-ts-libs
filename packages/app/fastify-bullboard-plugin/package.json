        "fastify-plugin": "^5.0.1",
        "ioredis": "^5.6.1",
        "pino": "^9.6.0",
        "toad-scheduler": "^3.0.1",
        "ts-deepmerge": "^7.0.3",
        "pino-pretty": "^13.0.0",
        "typescript": "5.8.3",
        "vitest": "^3.2.4"
    },
    "keywords": ["fastify", "bullboard", "bull", "dashboard", "plugin"],
    "homepage": "https://github.com/lokalise/shared-ts-libs",
    "repository": {
        "type": "git",
