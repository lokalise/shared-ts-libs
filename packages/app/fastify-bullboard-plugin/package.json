{
    "name": "@lokalise/fastify-bullboard-plugin",
    "version": "0.9.0",
    "type": "module",
    "engines": {
        "node": ">=20.13.0"
    },
    "license": "Apache-2.0",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./package.json": "./package.json"
    },
    "scripts": {
		"build": "rimraf dist && tsc --project tsconfig.build.json",
        "docker:start:ci": "docker compose up -d --quiet-pull redis",
        "test": "vitest run",
        "pretest:ci": "npm run docker:start:ci",
        "test:ci": "npm run test -- --coverage",
        "test:ci:teardown": "docker compose down",
        "lint": "biome check . && tsc --noEmit",
        "lint:fix": "biome check --write",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "@bull-board/api": "^6.10.1",
        "@bull-board/fastify": "^6.10.1",
        "@fastify/auth": "^5.0.2",
        "@fastify/basic-auth": "^6.0.3",
        "@lokalise/backend-http-client": "^5.0.0",
        "@lokalise/background-jobs-common": "^12.6.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@lokalise/biome-config": "^2.0.0",
        "@types/node": "^22.13.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@fastify/awilix": "^8.0.0",
        "@fastify/schedule": "^6.0.0",
        "@lokalise/fastify-extras": "^26.1.1",
        "@lokalise/node-core": "^14.1.0",
        "awilix": "^12.0.5",
        "awilix-manager": "^6.1.0",
