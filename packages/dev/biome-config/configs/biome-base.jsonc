{
    "$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "groups": [
                            // Node.js modules
                            ":NODE:",
                            // Modules imported with the `npm:` protocol
                            ["npm:*", "npm:*/**"],
                            // Modules imported with another protocol. e.g. `jsr:`
                            ":PACKAGE_WITH_PROTOCOL:",
                            // URLs
                            ":URL:",
                            // Libraries
                            ":PACKAGE:",
                            // Absolute paths
                            ["/**"],
                            // Sharp aliases
                            ["#*", "#*/**"],
                            // All other paths
                            ":PATH:"
                        ]
                    }
                }
            }
        }
    },
    "json": {
        "formatter": {
            "enabled": true,
            "lineWidth": 100,
            "indentStyle": "space"
        },
        "parser": {
            "allowComments": true
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "indentWidth": 2,
            "indentStyle": "space",
            "semicolons": "asNeeded",
            "lineWidth": 100,
            "quoteStyle": "single",
            "trailingCommas": "all"
        }
    },
    "files": {
        "includes": ["**/*.ts", "**/*.mts", "**/*.tsx", "**/*.json", "**/*.jsonc", "!dist", "!coverage", "!node_modules"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "rules": {
            "performance": {
                "noBarrelFile": "error"
            },
            "style": {
                "noDefaultExport": "error",
                "useShorthandAssign": "error",
                "useForOf": "error",
                "useExponentiationOperator": "off"
            },
            "correctness": {
                "noUnusedVariables": "error",
                "noUnusedImports": "error",
                "noUnusedPrivateClassMembers": "error",
                "noUndeclaredVariables": "error"
            },
            "suspicious": {
                "noConsole": "error",
                "useAwait": "error"
            },
            "complexity": {
                "noEmptyTypeParameters": "off",
                "noExcessiveCognitiveComplexity": {
                    "level": "error",
                    "options": {
                        "maxAllowedComplexity": 15
                    }
                }
            }
        }
    },
    "overrides": [
        {
            "includes": ["./**/*.spec.ts", "./**/*.test.ts", "./**/*.test.tsx", "**/test/**/*"],
            "javascript": {
                // Allow Vitest globals in test files
                "globals": [
                    "describe",
                    "it",
                    "expect",
                    "beforeEach",
                    "afterEach",
                    "beforeAll",
                    "afterAll",
                    "vi"
                ]
            },
            "linter": {
                "rules": {
                    "style": {
                        "noNonNullAssertion": "off"
                    },
                    "suspicious": {
                        "noExplicitAny": "off"
                    }
                }
            }
        }
    ]
}
