{
  "$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentStyle": "tab",
      "semicolons": "asNeeded",
      "lineWidth": 100,
      "quoteStyle": "single",
      "trailingCommas": "all"
    }
  },
  "files": {
    "include": ["**/*.css"]
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "tab",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "rules": {
      "correctness": {
        "useHookAtTopLevel": "error"
      }
    }
  }
}
