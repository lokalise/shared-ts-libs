{
    "$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
    "javascript": {
        "formatter": {
            "enabled": true,
            "indentStyle": "tab",
            "semicolons": "asNeeded",
            "lineWidth": 100,
            "quoteStyle": "single",
            "trailingCommas": "all"
        }
    },
    "files": {
        "includes": ["**/*.css"]
    },
    "css": {
        "parser": {
            "cssModules": true
        },
        "formatter": {
            "enabled": true,
            "indentStyle": "tab",
            "quoteStyle": "single"
        }
    },
    "linter": {
        "rules": {
            "correctness": {
                "useHookAtTopLevel": "error"
            }
        }
    },
    "plugins": ["./node_modules/@lokalise/biome-config/configs/plugins/no-manual-z-index.grit"]
}
