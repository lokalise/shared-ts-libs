{
    "$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
    "linter": {
        "rules": {
            "correctness": {
                "useImportExtensions": {
                    "level": "error",
                    "fix": "safe",
                    "options": {
                        "suggestedExtensions": {
                            "ts": {
                                "module": "js",
                                "component": "js"
                            },
                            "tsx": {
                                "module": "js",
                                "component": "jsx"
                            },
                            "mts": {
                                "module": "mjs",
                                "component": "mjs"
                            }
                        }
                    }
                }
            }
        }
    }
}
